<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VetMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/_Orange</item>
        <item name="colorPrimaryVariant">@color/_Black_Light</item>
        <item name="colorOnPrimary">@color/_Orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/_Light_Orange</item>
        <item name="colorSecondaryVariant">@color/_Red_More_Darker</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/_Orange</item>
        <item name="colorPrimaryVariant">@color/_Black_Light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnPrimary">@color/_Black_Light</item>
        <item name="colorSecondary">@color/_Red_More_Darker</item>
        <item name="colorOnError">@color/_Red_More_Darker</item>
        <item name="colorOnSurface">@color/_Red_More_Darker</item>
        <item name="colorOnBackground">@color/_Black_Light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>